{% extends 'base.html.twig' %}

{% block body %}
    <h1>Test</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ test.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ test.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ test.description }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ test.source }}</td>
            </tr>
            <tr>
                <th>Questions</th>
                <td>{% if test.questions %}{{ test.questions|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('test_edit', { 'id': test.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
